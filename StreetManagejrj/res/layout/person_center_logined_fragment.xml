<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundrep"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/uesrname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/receive_messages"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/centerbackground"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:text="@string/receive_message"
            android:textSize="@dimen/textSize" />

        <ListView
            android:id="@+id/messageList"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/message_list_corner_round"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/product_line"
            android:visibility="gone" >
        </ListView>

        <Button
            android:id="@+id/usertimes"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/centerbackground"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="@string/jifen"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/usertimesTV"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/message_list_corner_round"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize"
            android:visibility="gone" />

        <Button
            android:id="@+id/clear"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/centerbackground"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="@string/clear"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />

        <RelativeLayout
            android:id="@+id/creditid"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/centerbackground"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp" >

            <TextView
                android:id="@+id/usercredit"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/textview01"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:text="@string/credit"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize" />
        </RelativeLayout>

        <Button
            android:id="@+id/autopush"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/auto_push_off"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="@string/config"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />

        <Button
            android:id="@+id/logout"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/logout"
            android:text="@string/logout_button"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

</LinearLayout>